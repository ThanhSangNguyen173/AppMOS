<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".hdtan"
    android:background="#F3F1E9">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="MYSTERY OF SILENCE"
        android:textColor="#F3F1E9"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="#3A3939"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="629dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="461dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="470dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hdtan" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#3A3939"
                    android:textStyle="bold"
                    android:text="S" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#3A3939"
                    android:textStyle="bold"
                    android:text="M" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#3A3939"
                    android:textStyle="bold"
                    android:text="L" />

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#3A3939"
                    android:textStyle="bold"
                    android:text="XL" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3A3939"
                    android:text="QTY/Số lượng:  "
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/editTextNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:inputType="number" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● 380GSM Brushed Terry"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#3A3939"
                android:layout_margin="10dp"/>
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● Oversized Crop Fit"
                android:textStyle="bold"
                android:textColor="#3A3939"
                android:textSize="20dp"
                android:layout_margin="10dp"/>


            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● Quarter-zip At Front"
                android:textColor="#3A3939"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="10dp"/>
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● Embroidered Logo"
                android:textColor="#3A3939"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="10dp"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="120dp"/>

            <Button
                android:id="@+id/button"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#3A3939"
                android:text="Add to cart"
                android:enabled="false"
                android:textColor="#F3F1E9"/>

            <Button
                android:id="@+id/button2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3A3939"
                android:text="Back" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="WNOV21 Q-zip hoddie tan"
        android:textAllCaps="true"
        android:textColor="#3A3939"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:layout_marginBottom="10dp"/>
</LinearLayout>