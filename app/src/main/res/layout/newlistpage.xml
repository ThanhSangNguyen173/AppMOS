<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#3A3939">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="FEEDBACK PRODUCT"
        android:textStyle="italic"
        android:textSize="20dp"
        android:gravity="center"
        android:background="#F3F1E9"
        android:textColor="#3A3939"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/ed_ten_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="TÊN ITEM"
        android:textStyle="bold|italic"
        android:textColor="#F3F1E9"
        android:textColorHint="#F3F1E9"/>
    <EditText
        android:id="@+id/ed_ten_season"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập feedback của bạn"
        android:textColor="#F3F1E9"
        android:textColorHint="#F3F1E9"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:padding="10dp">

        <Button
            android:id="@+id/btnadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ĐĂNG"
            android:layout_marginRight="10dp"
            android:textColor="#3A3939"
            android:background="#F3F1E9"
            android:onClick="AddRow"/>
        <Button
            android:id="@+id/btnupdate"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SỬA"
            android:layout_marginRight="10dp"
            android:textColor="#3A3939"
            android:background="#F3F1E9"
            android:onClick="UpdateRow"/>
        <Button
            android:id="@+id/btndelete"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XÓA"
            android:layout_marginRight="10dp"
            android:textColor="#3A3939"
            android:background="#F3F1E9"
            android:onClick="DeleteRow"/>
        <Button
            android:id="@+id/btnback"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUAY LẠI"
            android:textColor="#3A3939"
            android:background="#F3F1E9"
            android:onClick="BackPage"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_ds_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>