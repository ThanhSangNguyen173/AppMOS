<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anh2"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".DkyPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận đặt hàng"
        android:textAllCaps="true"
        android:textColor="#3A3939"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextHo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="First name/Họ" />

        <EditText
            android:id="@+id/editTextTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Name/Tên" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/nam"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="NAM"
            android:buttonTint="#3A3939"
            android:textStyle="bold"
            android:textColor="#3A3939"/>

        <RadioButton
            android:id="@+id/nu"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="NỮ"
            android:buttonTint="#3A3939"
            android:textColor="#3A3939"
            android:textStyle="bold"/>
    </RadioGroup>

    <EditText
        android:id="@+id/editTextDOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="DOB/Ngày sinh: dd/MM/yyyy"
        android:inputType="date" />

    <EditText
        android:id="@+id/editTextID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Address/Địa chỉ"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="City/Thành phố"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextCoPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Phone number/SĐT"
        android:inputType="number" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="16dp"
        android:buttonTint="#3A3939"
        android:checked="false"
        android:text="Tôi đồng ý với tất cả các điều khoản của MOSVN" />

    <Button
        android:id="@+id/dky2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#CAC9C9"
        android:enabled="false"
        android:text="đặt hàng"
        />

</LinearLayout>